.right_box
  .right_box__header
    .right_box__header__groups-name
      = @group.name
      .right_box__header__menber-box
        .right_box__header__menber-name
          menber:
        - @group.users.each do |user|
          .right_box__header__menber
            = user.name


    = link_to edit_group_path(@group), class: "right_box__header__edit-btn" do
      = "Edit"

  .right_box__center
    = render @messages
 
  .right_box__footer
    = form_for [@group, @message] do |f|
      .right_box__footer__message
        = f.text_field :content, class: 'right_box__footer__message__text', placeholder: 'type a message'
        .right_box__footer__message__icon
          = f.label :image, class: 'image' do
            = icon('fas', 'image')
            = f.file_field :image, class: 'hidden'
      = f.submit 'Send', class: 'right_box__footer__send'